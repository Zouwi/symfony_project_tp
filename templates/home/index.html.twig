{% extends 'base.html.twig' %}

{% block title %}Bienvenue{% endblock %}

{% block body %}
    <div style="background: #09c; color: white; padding: 10px; border-radius: 20px; text-align: center; margin-bottom: 30px;">
        <div style="font-size: 30pt" class="display-4 fw-bold mb-3 ls-sm">Bienvenue sur le site de réservation de produits de gaming</div>
        <a style="text-decoration: none; background: white; padding: 5px 20px 5px 20px; border-radius: 5px; color: black" href="{{ path('app_blog') }}">Blog</a>
        <a style="text-decoration: none; background: white; padding: 5px 20px 5px 20px; border-radius: 5px; color: black" href="{{ path('app_produits') }}">Produits</a>
        <a style="text-decoration: none; background: white; padding: 5px 20px 5px 20px; border-radius: 5px; color: black" href="{{ path('app_login') }}">Se connecter</a>
    </div>
    <div style="margin: 50px 0 50px 0">
    <div class="display-4 fw-bold" style="font-size: 20pt; margin-bottom: 20px;">Les différents vendeurs</div>
    {% for seller in sellers %}
        <a href="{{ path('app_seller_booking', {id:seller.id}) }}" class="btn btn-primary">{{ seller.title }}</a>
    {% endfor %}
    </div>
    <div style="margin: 50px 0 50px 0">
    <div class="display-4 fw-bold" style="font-size: 20pt; margin-bottom: 20px;">Les derniers postes</div>
    {% for postes in poste %}
        <a href="{{ path('app_postes_detail', {id:postes.id, slug:postes.slug}) }}" class="btn btn-primary">{{ postes.name }}</a>
    {% endfor %}
    </div>

{% endblock %}
